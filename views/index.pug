extends layout

block content
  script(src="https://cdn.auth0.com/js/lock/10.0/lock.min.js")

  .container.main-bg
    .jumbotron.text-center
        h1 Welcome to 
        img.main-img(src='/images/main.png')
        br
        br
        button.btn.btn-danger.login-button(onclick="signin()")
          .login LOGIN
        br
        br
        br
        p 
          a(href='/') About
          |  -  
          a(href='/') Press
          |  -  
          a(href='/') Copyright
          |  -  
          a(href='/') Creaters
          |  -  
          a(href='/') Careers(jk)
          |  -  
          a(href='/') Cool
  script.
    var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}',
      { auth: {
          redirectUrl: '#{env.AUTH0_CALLBACK_URL}'
          , responseType: 'code'
          , params: {
              scope: 'openid name email picture'
              }
          },
          theme: {
            primaryColor: 'green',
            logo: '/images/leakedin-icon.png'
          },
          languageDictionary: {title: "Log in"},
          allowedConnections: ['facebook', 'linkedin']
      });

    function signin() {
      lock.show();
    }
